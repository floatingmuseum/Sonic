<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="floatingmuseum.sample.sonic.MainActivity">

    <TextView
        android:id="@+id/tv_multi_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="多任务"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_execute_button"
        android:layout_below="@+id/tv_multi_task_title"
        android:padding="10dp" />

    <LinearLayout
        android:id="@+id/ll_execute_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_pause_all_force"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pause All Force"
            android:textSize="10sp" />

        <Button
            android:id="@+id/bt_pause_all_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pause All Normal"
            android:textSize="10sp" />

        <Button
            android:id="@+id/bt_pause_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pause All"
            android:textSize="10sp" />
    </LinearLayout>
</RelativeLayout>
